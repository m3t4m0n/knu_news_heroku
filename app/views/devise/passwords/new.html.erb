
<section class="page-section" id="login">
    <div class="container relative">
        <div class="row">
          <h2 class="section-title font-alt align-center mb-70 mb-sm-40">
            Forgot your password?
          </h2>
          <div class="col-sm-12 mb-40 login_box">
             <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= devise_error_messages! %>
              <div class="field mb-20 mb-md-10">
                <%= f.email_field :email, autofocus: true, class:"input-md form-control form-devise", placeholder: "email" %>
              </div>
              <div class="actions align-center">
                  <%= f.submit "Send me reset password instructions",class: "btn btn-mod btn-medium btn-round" %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
</section>

